<%= form_with method: :post, local: true do |form| %>
  <br>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :calories %>
  <%= form.number_field :calories %>
  <br>
  <%= form.label :has_milk %>
  <%= form.radio_button :has_milk, "true" %>
  <%= form.label :has_milk_true, "True" %>
  <%= form.radio_button :has_milk, "false" %> 
  <%= form.label :has_milk_false, "False" %>
  <br>
  <%= form.submit "Add Drink" %>
<% end %>