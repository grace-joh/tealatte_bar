<%= form_with method: :post, local: true do |form| %>
  <br>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :calories %>
  <%= form.number_field :calories %>
  <br>
  <%= form.label :in_season %>
  <%= form.radio_button :in_season, "true" %>
  <%= form.label :in_season_true, "True" %>
  <%= form.radio_button :in_season, "false" %> 
  <%= form.label :in_season_false, "False" %>
  <br>
  <%= form.submit "Add Drink" %>
<% end %>